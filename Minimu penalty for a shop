class Solution {
public:
    int bestClosingTime(string customers) {
        int p=0;

        for(char c: customers){
            if(c=='Y') p++;
        }
        int minp=p;
        int besthour=0;
        for(int i=0;i<customers.size();i++){
            if(customers[i]=='Y'){
                p--;
            } else {
                p++;
            }
            if(p<minp){
                minp=p;
                besthour=i+1;
            }
        }
        return besthour;
    }
};
