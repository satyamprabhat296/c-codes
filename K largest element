!!!!!!!!!!!!!!!!!!!!!!!       K LARGEST ELEMENT IN THE GIVEN ARRAY        !!!!!!!!!!!!!!!!!!!!!!!!!1


xlass solution {
public:
vector<int>kLargest(vector<int>&arr,int k){
     vector<int>res;
   sort(arr.begin(),arr.end(),greater<int>());
        
        vector<int>res;
        for(int i =0;i<k;i++){
            res.push_back(arr[i]);
        }
        return res;
    }
